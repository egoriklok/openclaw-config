# Environment Variables
# Copy to .env and fill in your values

# =============================================================================
# LLM PROVIDER (OpenRouter - recommended, has free models)
# =============================================================================
# Get your key at: https://openrouter.ai
OPENROUTER_API_KEY=sk-or-v1-your-key-here
LLM_PROVIDER=openrouter
LLM_MODEL=deepseek/deepseek-r1

# Alternative models (all free):
# LLM_MODEL=meta-llama/llama-3.3-70b-instruct
# LLM_MODEL=google/gemma-3-27b-it
# LLM_MODEL=qwen/qwen3-4b

# =============================================================================
# TELEGRAM
# =============================================================================
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-bot-token

# =============================================================================
# GATEWAY
# =============================================================================
# Generate a secure random token (64 chars recommended)
CLAWDBOT_GATEWAY_TOKEN=your-secure-gateway-token
CLAWDBOT_GATEWAY_BIND=0.0.0.0
CLAWDBOT_GATEWAY_CONTROLUI_ALLOWINSECUREAUTH=true
CLAWDBOT_GATEWAY_TRUSTEDPROXIES=0.0.0.0/0

# =============================================================================
# MEMORY (Optional - ByteRover for persistent memory)
# =============================================================================
# Get key at: https://byterover.com
BYTEROVER_API_KEY=your-byterover-key

# =============================================================================
# CORE SETTINGS
# =============================================================================
NODE_ENV=production
PORT=8080
